<%= stylesheet_link_tag 'developers_search' %>

<div id="page" class="card">
  <div id="dev" class="card-body">
    <div class="dev-container pt pb pr pl">
      <div class="dev pr">
        <%= image_tag (developer.avatar_url(:medium)), class: 'dev-img' %>
        <div class="username">
          <div class="name"><%= developer.name %>
            <% if developer.verified %>
              <i id="verified-icon" class="fas fa-check-circle" style="color:#1a8cff"></i>
            <% end %>
          </div>
          <div class="handle"><%= link_to '@' + developer.username, developer_path(developer) %></div>
          <div class="date pt pb"><%= I18n.t('developers.show.joined') %>
            <%= created_at_formatted(developer.created_at) %>
          </div>
        </div>
        <div class="dev-content pt">
          <%= truncate(strip_tags(developer.bio), length: 512) %>
        </div>
      </div>
    </div>
  </div>
</div>

