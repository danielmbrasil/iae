<p><%= I18n.t('developers.email-changed.greeting') + ' ' + @resource.name %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= I18n.t('developers.email-changed.messages.new-unconfirmed-email') + ' ' + @resource.unconfirmed_email %>.</p>
<% else %>
  <p><%= I18n.t('developers.email-changed.messages.new-confirmed-email') + ' ' + @resource.email %>.</p>
<% end %>
