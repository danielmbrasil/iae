<%= stylesheet_link_tag 'guests' %>

<div class="card bg-light">
  <article class="card-body mx-auto" style="max-width: 360px; margin-top: -20px; height: 100vh">
    <img class="card-img-top" src="<%= asset_path('logo.svg')%>" alt="", width="250", height="250">
    <h4 class="card-title mt-3 text-center">Resend unlock instructions</h4>
    <p class="text-center">Enter your username and name to resend unlock instructions</p>
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %> 
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="far fa-user"></i>
          </span>
        </div>
        <%= f.text_field :username, class: 'form-control', placeholder: 'Username', type: 'text', required: true %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-envelope"></i>
          </span>
        </div>
        <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: 'Email address', type: 'email', required: true %>
      </div> 
      <div class="form-group" style="margin-top: 20px">
        <%= f.submit 'Resend email', class: 'btn btn-primary btn-block' %>
      </div>
      <%= render 'guests/shared/error_messages', resource: resource %>
    <% end %>
  </article>
</div>

